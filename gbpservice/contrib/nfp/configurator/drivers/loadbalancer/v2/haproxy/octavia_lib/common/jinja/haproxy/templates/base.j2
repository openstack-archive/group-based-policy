# Configuration for {{ loadbalancer_name }}
global
    daemon
    user nobody
    group {{ usergroup }}
    log {{ log_http | default('/dev/log', true)}} local0
    log {{ log_server | default('/dev/log', true)}} local1 notice
    stats socket {{ sock_path }} mode 0666 level user

defaults
    log global
    retries 3
    option redispatch
    timeout connect {{ timeout_connect | default('5000', true) }}
    timeout client {{ timeout_client | default('50000', true) }}
    timeout server {{ timeout_server | default('50000', true) }}

{% block peers %}{% endblock peers %}

{% block proxies %}{% endblock proxies %}
